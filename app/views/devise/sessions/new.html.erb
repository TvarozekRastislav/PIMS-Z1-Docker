<div class="container ">
  <div class="row justify-content-center pt-5 ">
    <div class="col-md-6 bg-dark opacity-75 text-light p-3 ">
      <h2 class="text-center ">Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin " }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br/>
          <%= f.password_field :password, autocomplete: "new-password", class: "current-password form-control" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field form-group">
            <%= f.check_box :remember_me, class: "btn-check" %>
            <label class="btn btn-outline-primary" for="user_remember_me">Remember me</label>
            <%= f.submit "Log in", class: "btn btn-primary me-3" %>
          </div>
        <% end %>
        <div>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
